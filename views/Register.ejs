<%- include("header") -%>
<div>
  <form action="/Register" class="form-signin" method="POST">
    <h1 class="h3 mb-3 font-weight-normal" style="color: #09556d; font-style: italic; font-size: xx-large;">Sign Up to Make your account!</h1>
    <input type="text" name="fName" class="form-control top" placeholder="First Name" required autofocus>
    <input type="text" name="lName" class="form-control middle" placeholder="Last Name" required>
    <input type="email" name="username" id="inputPassword middle" class="form-control" placeholder="Email" required>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Me up!</button>
    <br>
    <h5>Already Registered? <a href="Login">Login here</a></h5>
    <br>
  </form>
</div>

<%- include("footer") -%>